% define the colours to be used throughout the template
\definecolor{bgcolour}{rgb}{0.0,0.0,0.0}
\definecolor{textcolour}{rgb}{1.0,1.0,1.0}
\definecolor{accentcolour}{rgb}{0.0,0.0,1.0}

\mode<presentation>

% Settings
% general colours
\setbeamercolor*{background canvas}{bg=bgcolour}

%general text colours
\setbeamercolor*{normal text}{fg=textcolour}
\setbeamercolor*{alerted text}{fg=accentcolour}
\setbeamercolor*{item}{fg=textcolour}
\setbeamercolor*{structure}{fg=textcolour} %the colour of the label "Figure:" in figure captions

%title page colours
\setbeamercolor*{title page header}{fg=textcolour}
\setbeamercolor*{author}{fg=textcolour}
\setbeamercolor*{date}{fg=textcolour}

%table of contents
\setbeamercolor*{text in toc}{fg=textcolour}

%block
\setbeamercolor*{block body}{bg=accentcolour!30!bgcolour}
\setbeamercolor*{block title}{bg=accentcolour!60!bgcolour}

%other colours
\setbeamercolor*{mini frames}{fg=accentcolour}

\mode
<all>
